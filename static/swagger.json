{
  "openapi": "3.0.0",
  "info": {
    "title": "TicketQ API",
    "description": "API for managing event tickets",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://warm-jessamine-alfifrr-17048706.koyeb.app",
      "description": "Production server"
    },
    {
      "url": "http://localhost:8000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Homepage",
        "description": "Returns welcome message",
        "responses": {
          "200": {
            "description": "Welcome message",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Halo, Welcome to the TicketQ backend!"
                }
              }
            }
          }
        }
      }
    },
    "/tickets": {
      "get": {
        "summary": "Get all tickets",
        "description": "Returns a list of all tickets sorted by unused with date",
        "responses": {
          "200": {
            "description": "List of tickets",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Success retrieving all tickets"
                    },
                    "tickets": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Ticket"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new ticket",
        "description": "Creates a new ticket with the given details",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["eventName", "location", "time"],
                "properties": {
                  "eventName": {
                    "type": "string",
                    "example": "DWP 2025"
                  },
                  "location": {
                    "type": "string",
                    "example": "Jakarta"
                  },
                  "time": {
                    "type": "string",
                    "format": "date-time",
                    "example": "2025-08-20T20:00:00Z"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Ticket created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Created new ticket: DWP 2025"
                    },
                    "id": {
                      "type": "string",
                      "example": "64ccf123456789abcdef1234"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/tickets/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          },
          "description": "The ticket ID"
        }
      ],
      "get": {
        "summary": "Get a specific ticket",
        "description": "Returns details of a specific ticket",
        "responses": {
          "200": {
            "description": "Ticket details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Success retrieving ticket"
                    },
                    "ticket": {
                      "$ref": "#/components/schemas/Ticket"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Ticket not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "patch": {
        "summary": "Mark ticket as used",
        "description": "Marks a specific ticket as used",
        "responses": {
          "200": {
            "description": "Ticket marked as used",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully marked a ticket"
                    },
                    "id": {
                      "type": "string",
                      "example": "64ccf123456789abcdef1234"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Ticket not found or already used"
          }
        }
      },
      "delete": {
        "summary": "Delete a ticket",
        "description": "Deletes a specific ticket",
        "responses": {
          "200": {
            "description": "Ticket deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Successfully deleted a ticket"
                    },
                    "id": {
                      "type": "string",
                      "example": "64ccf123456789abcdef1234"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Ticket not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Ticket": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "64ccf123456789abcdef1234"
          },
          "eventName": {
            "type": "string",
            "example": "DWP 2025"
          },
          "location": {
            "type": "string",
            "example": "Jakarta"
          },
          "time": {
            "type": "string",
            "format": "date-time",
            "example": "2025-08-20T20:00:00Z"
          },
          "isUsed": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Error message here"
          }
        }
      }
    }
  }
}